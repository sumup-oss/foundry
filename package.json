{
  "name": "@sumup-oss/foundry",
  "version": "9.0.2",
  "description": "A toolkit for JavaScript + TypeScript applications by SumUp.",
  "repository": "https://github.com/sumup-oss/foundry",
  "author": "Felix Jung <felix.jung@sumup.com>, Connor BÃ¤r <connor.baer@sumup.com>",
  "license": "Apache-2.0",
  "files": [
    "./dist",
    "./CHANGELOG.md",
    "./CONTRIBUTING.md"
  ],
  "bin": "./dist/cli/index.js",
  "type": "module",
  "exports": {
    "./eslint": {
      "types": "./dist/eslint.d.ts",
      "default": "./dist/eslint.js"
    },
    "./husky": {
      "types": "./dist/husky.d.ts",
      "default": "./dist/husky.js"
    },
    "./lint-staged": {
      "types": "./dist/lint-staged.d.ts",
      "default": "./dist/lint-staged.js"
    },
    "./stylelint": {
      "types": "./dist/stylelint.d.ts",
      "default": "./dist/stylelint.js"
    },
    "./biome": "./dist/biome.json"
  },
  "typesVersions": {
    "*": {
      "eslint": [
        "./dist/eslint.d.ts"
      ],
      "husky": [
        "./dist/husky.d.ts"
      ],
      "lint-staged": [
        "./dist/lint-staged.d.ts"
      ],
      "stylelint": [
        "./dist/stylelint.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "npm run cleanup && tsc && chmod +x dist/cli/index.js && cp src/configs/biome/biome.json dist/biome.json",
    "dev": "npm run cleanup && tsc --watch",
    "start": "npm run dev",
    "cleanup": "rimraf ./dist && mkdir dist",
    "lint": "biome check && eslint src",
    "lint:fix": "biome check --write && eslint src --fix",
    "lint:ci": "biome ci && eslint src",
    "test": "vitest",
    "test:ci": "vitest run --coverage",
    "codecov": "codecov",
    "check:security": "audit-ci --critical",
    "check:licenses": "license-checker --production --summary --failOn=GPLv3",
    "release": "changeset publish"
  },
  "engines": {
    "node": "^20.19 || >=22"
  },
  "browserslist": [
    "node 20.19",
    "node 22"
  ],
  "dependencies": {
    "@biomejs/biome": "2.2.4",
    "@biomejs/js-api": "^3.0.0",
    "@biomejs/wasm-nodejs": "2.2.4",
    "@eslint/js": "^9.36.0",
    "@inquirer/confirm": "^5.1.18",
    "@listr2/prompt-adapter-inquirer": "^3.0.4",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "chalk": "^5.6.2",
    "cross-spawn": "^7.0.6",
    "dedent": "^1.7.0",
    "deepmerge-ts": "^7.1.5",
    "eslint": "^9.36.0",
    "eslint-import-resolver-oxc": "^0.15.0",
    "eslint-plugin-compat": "^6.0.2",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-notice": "^1.1.0-rc1",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^16.4.0",
    "husky": "^4.3.8",
    "is-ci": "^4.1.0",
    "lint-staged": "16.2.0",
    "listr2": "^9.0.4",
    "read-package-up": "^11.0.0",
    "semver": "^7.7.2",
    "stylelint": "^16.24.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-no-unsupported-browser-features": "^8.0.4",
    "stylelint-order": "^7.0.0",
    "typescript-eslint": "^8.44.1",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@types/cross-spawn": "^6.0.6",
    "@types/eslint-plugin-security": "^3.0.0",
    "@types/node": "^24.6.1",
    "@types/semver": "^7.7.1",
    "@types/yargs": "^17.0.33",
    "@vitest/coverage-v8": "^3.2.4",
    "audit-ci": "^7.1.0",
    "codecov": "^3.8.3",
    "license-checker": "^25.0.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@sumup-oss/stylelint-plugin-circuit-ui": ">=3.0.0 <5.0.0",
    "eslint-plugin-react": "^7.35.0"
  },
  "peerDependenciesMeta": {
    "@sumup-oss/stylelint-plugin-circuit-ui": {
      "optional": true
    },
    "eslint-plugin-react": {
      "optional": true
    }
  }
}
