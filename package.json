{
  "name": "@sumup-oss/foundry",
  "version": "8.4.1",
  "description": "A toolkit for JavaScript + TypeScript applications by SumUp.",
  "repository": "https://github.com/sumup-oss/foundry",
  "author": "Felix Jung <felix.jung@sumup.com>, Connor BÃ¤r <connor.baer@sumup.com>",
  "license": "Apache-2.0",
  "files": [
    "./dist",
    "./CHANGELOG.md",
    "./CONTRIBUTING.md"
  ],
  "bin": "dist/cli/index.js",
  "type": "module",
  "exports": {
    "./eslint": "./dist/eslint.js",
    "./husky": "./dist/husky.js",
    "./lint-staged": "./dist/lint-staged.js",
    "./stylelint": "./dist/stylelint.js",
    "./biome": "./dist/biome.jsonc"
  },
  "scripts": {
    "build": "npm run cleanup && tsc && chmod +x dist/cli/index.js && cp src/configs/biome/biome.jsonc dist/biome.jsonc",
    "dev": "npm run cleanup && tsc --watch",
    "start": "npm run dev",
    "cleanup": "rimraf ./dist && mkdir dist",
    "lint": "biome check && eslint src",
    "lint:fix": "biome check --write && eslint src --fix",
    "lint:ci": "biome ci && eslint src",
    "test": "vitest",
    "test:ci": "vitest run --coverage",
    "codecov": "codecov",
    "check:security": "audit-ci --critical",
    "check:licenses": "license-checker --production --summary --failOn=GPLv3",
    "release": "changeset publish"
  },
  "engines": {
    "node": "^20.9 || >=22"
  },
  "browserslist": [
    "node 20.9",
    "node 22"
  ],
  "dependencies": {
    "@babel/core": "^7.28.0",
    "@babel/eslint-parser": "^7.28.0",
    "@biomejs/biome": "1.9.4",
    "@biomejs/js-api": "^0.7.1",
    "@biomejs/wasm-nodejs": "^1.9.4",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "chalk": "^5.5.0",
    "cross-spawn": "^7.0.6",
    "dedent": "^1.6.0",
    "deepmerge-ts": "^7.1.5",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-compat": "^6.0.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-notice": "^1.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^4.3.8",
    "inquirer": "^12.9.1",
    "is-ci": "^4.1.0",
    "lint-staged": "15.4.3",
    "listr": "^0.14.3",
    "listr-inquirer": "^0.1.0",
    "read-package-up": "^11.0.0",
    "semver": "^7.7.2",
    "stylelint": "^16.23.1",
    "stylelint-config-recess-order": "^7.2.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-no-unsupported-browser-features": "^8.0.4",
    "stylelint-order": "^7.0.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@types/cross-spawn": "^6.0.6",
    "@types/dedent": "^0.7.2",
    "@types/inquirer": "^9.0.9",
    "@types/is-ci": "^3.0.4",
    "@types/listr": "^0.14.9",
    "@types/node": "^20.9.0",
    "@types/semver": "^7.7.0",
    "@types/yargs": "^17.0.33",
    "@vitest/coverage-v8": "^3.2.4",
    "audit-ci": "^7.1.0",
    "codecov": "^3.8.3",
    "license-checker": "^25.0.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
