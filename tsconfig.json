{
  "compilerOptions": {
    "lib": [
      "ES2020"
    ],
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./src/types/"
  ]
}
